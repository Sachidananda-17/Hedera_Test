{
  "manifest_version": 3,
  "name": "Hedera AI Notary",
  "description": "Notarize highlighted text to Hedera + IPFS and query via popup chat.",
  "version": "0.1.0",
  "action": {
    "default_title": "Hedera Notary",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "management"
  ],
  "host_permissions": [
    "http://localhost:3001/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["walletconnect.global.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

